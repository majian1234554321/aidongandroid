<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fafafa"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="-5dp"
                android:drawableTop="@mipmap/main_home"
                android:gravity="center"
                android:text="@string/main_home"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignEnd="@+id/home_layout"
                android:layout_alignRight="@+id/home_layout"
                android:layout_alignTop="@+id/home_layout"
                android:src="@drawable/sample_footer_error"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_discover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="-5dp"
                android:drawableTop="@mipmap/main_video"
                android:gravity="center"
                android:text="@string/main_video"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignEnd="@+id/message_layout"
                android:layout_alignRight="@+id/message_layout"
                android:layout_alignTop="@+id/message_layout"
                android:src="@drawable/sample_footer_error"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/fl_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="2dp"
                android:scaleType="center"
                android:src="@drawable/sample_footer_error" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discovery_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="-5dp"
                android:drawableTop="@mipmap/main_discover"
                android:gravity="center"
                android:text="@string/main_discover"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignEnd="@+id/discovery_layout"
                android:layout_alignRight="@+id/discovery_layout"
                android:layout_alignTop="@+id/discovery_layout"
                android:src="@drawable/sample_footer_error"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="-5dp"
                android:drawableTop="@mipmap/main_mine"
                android:gravity="center"
                android:text="@string/main_mine"
                android:textSize="10sp" />


            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignEnd="@+id/profile_layout"
                android:layout_alignRight="@+id/profile_layout"
                android:layout_alignTop="@+id/profile_layout"
                android:src="@drawable/sample_footer_error"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

