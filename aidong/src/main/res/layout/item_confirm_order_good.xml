<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/left_margin"
    android:paddingRight="@dimen/right_margin">

    <ImageView
        android:id="@+id/dv_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rb_check" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/tv_goods_price"
        android:layout_toRightOf="@+id/dv_cover"
        android:singleLine="true"
        android:text="健身"
        android:textColor="@color/c3"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_goods_name"
        android:layout_alignParentRight="true"
        android:text="150"
        android:textColor="@color/c3"
        android:textSize="16sp" />


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_goods_name"
        android:layout_below="@+id/tv_goods_name">


        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/pref_12dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="X 1" />

        <TextView
            android:id="@+id/tv_sku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/tv_count"
            android:singleLine="true"
            android:textColor="@color/c9"
            android:textSize="12sp"
            tools:text="sku11" />


        <TextView
            android:id="@+id/tv_recommend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sku"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColor="@color/c9"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="1212"

            />


    </RelativeLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:textColor="@color/main_red"
        tools:text="122112" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="@color/line_color" />
</RelativeLayout>