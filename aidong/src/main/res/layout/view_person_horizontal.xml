<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txt_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="@string/my_attention"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/txt_check_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/b3"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:text="@string/check_all"
            android:layout_marginLeft="15dp"
            android:drawableRight="@drawable/icon_right_arrow"
            android:drawablePadding="5dp"
            />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_person"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        />
    <View android:layout_height="@dimen/x20"
        android:background="@color/line_color"
        android:layout_width="match_parent"/>

</LinearLayout>