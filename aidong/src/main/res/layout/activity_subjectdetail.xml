<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:listSelector="@color/color_white"
            android:scrollbars="none"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrDrawable="@drawable/default_ptr_flip"
            ptr:ptrHeaderBackground="@color/color_white"
            ptr:ptrHeaderTextColor="@color/e_five">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pref_300dip">

                    <com.example.aidong.view.CustomViewPager
                        android:id="@+id/viewpager_subject_detail_top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:id="@+id/layout_subject_detail_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/pref_10dp"
                        android:orientation="horizontal"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_subject_detail_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/convert_camera"/>

                        <TextView
                            android:layout_width="@dimen/pref_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/img_subject_detail_guanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/convert_camera"/>

                        <ImageView
                            android:id="@+id/img_subject_detail_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/convert_camera"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_subject_detail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_txt_gray2"
                        android:minWidth="@dimen/pref_80dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16sp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_subject_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_18sp"/>

                    <TextView
                        android:id="@+id/txt_subject_detail_classname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_txt_gray2"
                        android:textSize="@dimen/font_16sp"/>

                    <TextView
                        android:id="@+id/txt_subject_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_txt_gray2"
                        android:textSize="@dimen/font_16sp"/>

                    <com.example.aidong.view.CircleImageView
                        android:id="@+id/img_subject_detail_head"
                        android:layout_width="@dimen/pref_70dp"
                        android:layout_height="@dimen/pref_70dp"
                        android:src="@color/color_txt_gray2"/>

                    <TextView
                        android:id="@+id/txt_subject_detail_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_txt_gray2"
                        android:textSize="@dimen/font_16sp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/pref_0.5dp"
                        android:layout_marginLeft="@dimen/pref_10dp"
                        android:layout_marginRight="@dimen/pref_10dp"
                        android:src="@color/line_color"/>

                    <LinearLayout
                        android:id="@+id/layout_subject_detail_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/pref_10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/convert_camera"/>

                        <TextView
                            android:id="@+id/txt_subject_detail_addr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/color_txt_gray2"
                            android:textSize="@dimen/font_16sp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/convert_camera"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pref_0.5dp"
                    android:src="@color/line_color"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pref_0.5dp"
                    android:layout_marginTop="@dimen/pref_10dp"
                    android:src="@color/line_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/pref_10dp"
                        android:text="@string/txt_subject_detail_jianjie"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/font_16sp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/pref_0.5dp"
                        android:layout_marginLeft="@dimen/pref_20dp"
                        android:src="@color/line_color"/>

                    <TextView
                        android:id="@+id/txt_subject_detail_jianjie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/pref_10dp"
                        android:textColor="@color/color_txt_gray2"
                        android:textSize="@dimen/font_16sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pref_0.5dp"
                    android:src="@color/line_color"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pref_0.5dp"
                    android:layout_marginTop="@dimen/pref_10dp"
                    android:src="@color/line_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/pref_10dp"
                        android:text="@string/txt_subject_detail_yibao"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/font_16sp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/pref_0.5dp"
                        android:layout_marginLeft="@dimen/pref_20dp"
                        android:src="@color/line_color"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_subject_detail_yibao"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/pref_70dp"
                        android:background="@color/white"
                        android:padding="@dimen/pref_10dp"
                        android:scrollbars="none"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/pref_70dp"/>
            </LinearLayout>
        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pref_50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/pref_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_subject_detail_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/font_16sp"/>

                <TextView
                    android:id="@+id/txt_subject_detail_maxnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/font_16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_subject_detail_baoming"
                android:layout_width="@dimen/pref_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_txt_gray2"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_16sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>