<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    android:background="@color/white">

    <include layout="@layout/inc_dynamic_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dv_one"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
           />

        <ImageView
            android:id="@+id/dv_two"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
          />

        <ImageView
            android:id="@+id/dv_three"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_top"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dv_four"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
           />

        <ImageView
            android:id="@+id/dv_five"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/dv_six"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
           />
    </LinearLayout>
    <include layout="@layout/inc_dynamic_bottom"/>
</LinearLayout>