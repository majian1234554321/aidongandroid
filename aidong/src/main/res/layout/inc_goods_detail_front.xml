<?xml version="1.0" encoding="utf-8"?>
<com.leyuan.aidong.widget.customview.ObserveScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/banner_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/place_holder_logo"
            app:banner_pageChangeDuration="1000"
            app:banner_pointAutoPlayAble="false"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
            app:banner_pointTopBottomMargin="5dp"
            app:banner_transitionEffect="alpha" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="¥799.00"
            android:textColor="@color/main_red"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="¥1000"
            android:textColor="@color/c3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="PROCIRCLE  YOGA  BALL 瑜伽防爆滑健身球"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/venues_divider" />

        <LinearLayout
            android:id="@+id/ll_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/icon_black_point"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/icon_black_point"
                android:gravity="center_vertical"
                android:text="爱动福利券"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp" />

            <include layout="@layout/inc_bold_line" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sku"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?selectableItemBackground"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/right_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="已选择:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/icon_right_arrow"
                android:singleLine="true"
                android:text="芒果,1个"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <include layout="@layout/inc_line" />

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?selectableItemBackground"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/right_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="推荐码:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:drawablePadding="5dp"
                android:hint="若有推荐人请输入该人推荐码"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/c9"
                android:textSize="15sp" />
        </LinearLayout>

        <include layout="@layout/inc_line" />

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?selectableItemBackground"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/right_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="配送信息:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/icon_right_arrow"
                android:singleLine="true"
                android:text="请选择"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <include layout="@layout/inc_bold_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_black_point"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_black_point"
            android:gravity="center_vertical"
            android:text="爱动福利社"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_self_delivery" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_return" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_genuine" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_gabalnara" />
        </LinearLayout>

        <include layout="@layout/inc_bold_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/icon_arrow_up" />

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="上拉查看商品图文详情"
                android:textColor="@color/c3"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</com.leyuan.aidong.widget.customview.ObserveScrollView>