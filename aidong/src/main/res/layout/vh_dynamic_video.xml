<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_dynamic_bg">

    <include layout="@layout/inc_dynamic_header"/>

    <com.leyuan.aidong.widget.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants">

        <ImageView
            android:id="@+id/dv_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:clickable="false"
            android:background="@drawable/play_small"
            android:scaleType="centerCrop" />
    </com.leyuan.aidong.widget.SquareRelativeLayout>

    <include layout="@layout/inc_dynamic_bottom"/>
</LinearLayout>

