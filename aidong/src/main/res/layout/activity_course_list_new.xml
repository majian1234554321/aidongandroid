<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:background="@color/black"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                style="@style/styleImageBack" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/course_list"
                android:textColor="#fff"
                android:textSize="18sp" />


        </RelativeLayout>
        <!--android:background="@color/common_divider_color"-->
        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:layout_centerInParent="true"
            app:stl_defaultTabTextColor="@color/gray_normal"
            app:stl_defaultTabTextSize="16sp"
            app:stl_defaultTabBackground="?attr/selectableItemBackground"
            app:stl_indicatorColor="@color/course_oringe"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="3dp"
            app:stl_indicatorWidth="auto" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.leyuan.aidong.ui.home.view.CourseListFilterView
                android:id="@+id/view_filter_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

    <!--右侧滑菜单栏-->
    <include
        layout="@layout/drawer_course_filter_layout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end" />
</android.support.v4.widget.DrawerLayout>