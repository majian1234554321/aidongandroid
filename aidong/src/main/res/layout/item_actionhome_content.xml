<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_item_actionhome_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pref_130dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pref_230dip">

            <ImageView
                android:id="@+id/img_item_actionhome_tu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/color_txt_gray2"/>

            <TextView
                android:id="@+id/txt_item_actionhome_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_item_actionhome_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/pref_25dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16sp"/>

            <TextView
                android:id="@+id/txt_item_actionhome_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_item_actionhome_addr"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/pref_25dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16sp"/>

            <TextView
                android:id="@+id/txt_item_actionhome_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/pref_20dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16sp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>