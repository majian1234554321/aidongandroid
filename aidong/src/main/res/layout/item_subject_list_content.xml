<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pref_150dp">

        <ImageView
            android:id="@+id/img_item_subject_list_content_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/color_txt_gray2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pref_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_item_subject_list_content_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16sp"/>

            <TextView
                android:id="@+id/txt_item_subject_list_content_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/pref_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_item_subject_list_content_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16sp"/>

            <TextView
                android:id="@+id/txt_item_subject_list_content_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16sp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_item_subject_list_content_addr"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_16sp"/>

        <TextView
            android:id="@+id/txt_item_subject_list_content_juli"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/smallstar3"
            android:drawablePadding="@dimen/pref_5dp"
            android:paddingLeft="@dimen/pref_10dp"
            android:paddingRight="@dimen/pref_10dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_16sp"/>
    </LinearLayout>

</LinearLayout>