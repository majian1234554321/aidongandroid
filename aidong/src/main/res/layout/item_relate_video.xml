<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:paddingLeft="7.5dp"
    android:paddingRight="7.5dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_video_cover"
        android:layout_width="145dp"
        android:layout_height="92dp"
        android:src="@drawable/img_default"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_video_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_video_cover"
        android:layout_alignLeft="@+id/iv_video_cover"
        android:layout_alignRight="@+id/iv_video_cover"
        android:text="课程名字"
        android:textSize="12sp"
        android:gravity="left"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_video_time_and_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第一集/01'03"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:layout_below="@+id/tv_video_name"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="7dp"
        android:layout_alignLeft="@+id/iv_video_cover"
        android:layout_alignRight="@+id/iv_video_cover"/>
</RelativeLayout>