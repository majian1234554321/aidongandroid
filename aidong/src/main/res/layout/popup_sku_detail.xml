<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="12dp"
                android:text="GNC健安喜浓缩葡萄籽"
                android:textColor="@color/c3"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_marginRight="50dp"/>

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_good_name"
                android:layout_below="@+id/tv_good_name"
                android:layout_marginTop="8dp"
                android:text="默认价格范围"
                android:textColor="@color/main_red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_good_name"
                android:layout_below="@+id/tv_goods_price"
                android:layout_marginTop="8dp"
                android:text="总库存"
                android:textColor="@color/c3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_sku_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_good_name"
                android:layout_below="@+id/tv_stock"
                android:layout_marginTop="5dp"
                android:text="请选中 sku"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/c3"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="?selectableItemBackground"
                android:padding="14dp"
                android:scaleType="center"
                android:src="@drawable/icon_cancel" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line_color" />
        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_goods_cover"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/left_margin"
            app:actualImageScaleType="centerCrop"
            app:backgroundImage="@drawable/place_holder_logo" />
    </RelativeLayout>

    <com.leyuan.aidong.widget.customview.MaxHeightNestScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:scrollView_maxHeight="350dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_sku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/left_margin"
                android:paddingRight="@dimen/right_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="数量"
                    android:textColor="@color/c9"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_minus_gray" />
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="44dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_add" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white"/>
        </LinearLayout>
    </com.leyuan.aidong.widget.customview.MaxHeightNestScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginRight="@dimen/right_margin"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_red"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_add_cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/c3"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_red"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>