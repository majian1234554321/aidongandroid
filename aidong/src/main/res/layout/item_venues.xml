<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dv_venues_cover"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:roundedCornerRadius="2dp"
        fresco:placeholderImage="@drawable/place_holder_logo"/>

    <TextView
        android:id="@+id/tv_venues_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dv_venues_cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:singleLine="true"
        android:text="长风店"
        android:textColor="#ff5000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_venues_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_venues_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:text="dslfjasdlkfjsadlkfjdjkslafjkkjl"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_venues_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_venues_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:singleLine="true"
        android:text="2.9 km"
        android:textColor="#999999"
        android:textSize="17sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_venues_distance"
        android:layout_marginTop="2dp"
        android:src="@drawable/venues_divider" />
</RelativeLayout>

