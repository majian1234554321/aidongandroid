<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_item_foodhome_tuijian"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/img_item_foodhome_tuijian_tu"
        android:layout_width="@dimen/pref_100dp"
        android:layout_height="@dimen/pref_100dp"
        android:scaleType="centerCrop"
        android:src="@color/color_txt_gray2"/>

    <TextView
        android:id="@+id/txt_item_foodhome_tuijian_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_14sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_like_dynamic_copy"/>

        <TextView
            android:id="@+id/txt_item_foodhome_tuijian_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_14sp"/>
    </LinearLayout>

</LinearLayout>