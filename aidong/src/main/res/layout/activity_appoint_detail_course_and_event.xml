<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.leyuan.aidong.widget.SimpleTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        app:stb_title="@string/appointment_detail" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/main_red"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/ll_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/appoint_pay_time"
                        android:textColor="@color/main_red"
                        android:textSize="14sp" />

                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        app:isHideTimeBackground="true"
                        app:isShowDay="false"
                        app:isShowHour="true"
                        app:isShowMillisecond="false"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:isTimeTextBold="false"
                        app:suffixTextColor="@color/main_red"
                        app:timeTextColor="@color/main_red"
                        app:timeTextSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/c9"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/line_black" />

                <include
                    android:id="@+id/layout_course_coach"
                    layout="@layout/inc_course_image_text" />


                <RelativeLayout
                    android:id="@+id/rl_qr_code"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_qr_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:transitionName="@string/transition_code_num" />

                    <ImageView
                        android:id="@+id/dv_qr"
                        android:layout_width="294dp"
                        android:layout_height="73dp"
                        android:layout_below="@+id/tv_qr_num"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:background="@color/line_color"
                        android:transitionName="@string/transition_code" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/icon_line" />
                </RelativeLayout>

                <include
                    android:id="@+id/layout_course_location"
                    layout="@layout/inc_course_location_phone" />

                <com.leyuan.aidong.widget.richtext.RichWebView
                    android:id="@+id/web_view"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <!--支付方式-->
                <LinearLayout
                    android:id="@+id/layout_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:gravity="center_vertical"
                        android:text="@string/pay_type"
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                    <com.leyuan.aidong.widget.CustomNestRadioGroup

                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginRight="@dimen/right_margin"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/icon_ali_pay"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="@string/zhifubao"
                                android:textColor="@color/c3"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/cb_alipay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@color/line_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginRight="@dimen/right_margin"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/icon_weixin_pay"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="@string/weixin"
                                android:textColor="@color/c3"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/cb_weixin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </com.leyuan.aidong.widget.CustomNestRadioGroup>

                </LinearLayout>





                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/pref_15dp"
                        android:text="温馨提示:" />


                    <TextView
                        android:layout_below="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="left"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@string/course_order_hint"
                        android:textColor="@color/c9"
                        android:textSize="12sp" />

                </RelativeLayout>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="17dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="实付款:"
                android:textColor="@color/c3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/c3"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel_join"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_solid_corner_white"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="取消参加"
                android:textColor="@color/c3"
                android:textSize="14sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_cancel_appoint"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_solid_corner_white"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="取消预约"
                android:textColor="@color/c3"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_stroke_red"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="立即支付"
                android:textColor="@color/main_red"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_solid_corner_white"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="删除"
                android:textColor="@color/c3"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_stroke_red"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="立即支付"
                android:textColor="@color/main_red"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>