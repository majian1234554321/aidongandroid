<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/layout_living"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="@color/black">

            <RelativeLayout
                android:id="@+id/rel_living"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:layerType="software">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager_living"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:clipChildren="false" />


            </RelativeLayout>

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/recycler_living"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="158dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--/>-->
            <ImageView
                android:id="@+id/img_default_none_live"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default" />

            <RelativeLayout
                android:id="@+id/layout_single_living"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_living_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#22000000"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/img_living"
                    android:layout_width="47dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/icon_live" />

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="26dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/live_videoing" />

                <TextView
                    android:id="@+id/txt_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="70dp"
                    android:singleLine="true"
                    android:text="超级小接"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txt_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="70dp"
                    android:singleLine="true"
                    android:text="耐力训练"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt_viewers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:text="12323"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/txt_viewers"
                    android:src="@drawable/icon_live_watch_num" />

            </RelativeLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="38">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/img_play_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:src="@drawable/live_play_back" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:layout_weight="11"
                android:weightSum="11">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10">

                    <ImageView
                        android:id="@+id/img_special"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_live_special" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:layout_weight="11"
                android:weightSum="11">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10">

                    <ImageView
                        android:id="@+id/img_deep_into"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_live_deep_into" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:layout_weight="11"
                android:weightSum="11">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10">

                    <ImageView
                        android:id="@+id/img_celebrity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_live_celebrity" />


                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/layout_empty_living"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/living_empty"
                android:gravity="center"
                android:text="暂无直播"
                android:textColor="@color/c9"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>