<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="#f2f2f2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"

            android:text="爱动自营门店"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="84dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_coach"
                android:layout_width="60dp"
                android:layout_height="60dp"

              android:layout_centerInParent="true"

                />

            <TextView
                android:id="@+id/txt_coach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:maxWidth="90dp"
                android:visibility="gone"
                android:singleLine="true"
                android:textColor="@color/txt_black"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
android:gravity="left|center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:singleLine="true"
                tools:text="1212"
                android:textColor="@color/black"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/txt_course_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:textColor="@color/text_color_common"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_course_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    tools:text="12"
                    android:textColor="@color/course_oringe"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/txt_course_origin_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"

                    android:textColor="@color/course_oringe"
                    android:textSize="12sp" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_course_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="难度系数: "
                    android:textColor="@color/text_color_common"
                    android:textSize="13sp" />



            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_course_state"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerInParent="true"
                android:orientation="vertical">


                
                <TextView
                    android:layout_width="70dp"
                    android:text="排队"
                    android:gravity="center"
                    android:id="@+id/mb_level"

                    android:textSize="@dimen/sp_12"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/red_price"
                    android:background="@drawable/shape_stroke_red_button"
                    android:layout_height="36dp" />
                
                <TextView
                    android:id="@+id/txt_course_member_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textColor="@color/course_oringe"
                    android:textSize="12sp" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/line_color" />
</LinearLayout>