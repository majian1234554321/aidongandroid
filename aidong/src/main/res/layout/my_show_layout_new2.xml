<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >
    <include
        android:id="@+id/titleLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pref_50dp"
        layout="@layout/layout_title_top" >
    </include>

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#ff572f"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:id="@+id/tabTalkLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/tabTalkImageView"
                    android:layout_width="@dimen/pref_24dp"
                    android:layout_height="@dimen/pref_24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pref_5dp"
                    android:gravity="center" >
                </ImageView>

                <TextView
                    android:id="@+id/tabTalkTextView"
                    style="@style/tabTextStyle"
                    android:textColor="@color/color_white"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tabTalkImageView"
                    android:gravity="center"
                    android:text="私聊" >
                </TextView>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tabSportsWayLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/tabSportsWayImageView"
                    android:layout_width="@dimen/pref_24dp"
                    android:layout_height="@dimen/pref_24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/pref_5dp"
                    android:gravity="center"
                    android:src="@drawable/icon_detail_add_friend" >
                </ImageView>

                <TextView
                    android:id="@+id/tabMsgTextView"
                    style="@style/tabTextStyle"
                    android:textColor="@color/color_white"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tabSportsWayImageView"
                    android:gravity="center"
                    android:text="加好友" >
                </TextView>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/titleLayout"
        android:layout_above="@id/tabLayout"
        android:background="@color/color_light_white"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="@color/color_light_white"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrDrawable="@drawable/default_ptr_flip"
        ptr:ptrHeaderBackground="@color/color_light_white"
        ptr:ptrHeaderTextColor="@color/e_five" >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

    <View
        android:id="@+id/view_pop_bg"
        android:layout_below="@id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popwindow"
        android:visibility="gone"

        />

</RelativeLayout>
