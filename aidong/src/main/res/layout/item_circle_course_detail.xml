<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="111111111111"
                android:maxLength="25"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/txt_attention_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:visibility="gone"
                android:text="1 attention"
                android:textColor="@color/text_color_common"
                android:textSize="13sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_course_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:singleLine="true"
            android:text="索性 | 剪子 | 马健先 索性 | 剪子 | 马健先"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_color_common"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_course_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="难度系数: "
                android:textColor="@color/text_color_common"
                android:textSize="13sp" />



        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/bt_attention"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transpance"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_attention"
        android:layout_marginRight="15dp"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:src="@color/list_line_color"
        android:id="@+id/imageView6" />

    <ImageView
        android:id="@+id/img_coach"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:src="@color/actionsheet_blue"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />


</RelativeLayout>