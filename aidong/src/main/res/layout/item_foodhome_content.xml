<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/pref_5dp">


        <ImageView
            android:id="@+id/img_item_foodhome_content_tu"
            android:layout_width="@dimen/pref_160dp"
            android:layout_height="@dimen/pref_160dp"
            android:scaleType="centerCrop"
            android:src="@color/color_txt_gray2"/>

        <LinearLayout
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pref_5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_item_foodhome_content_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pref_10dp"
                android:text="@string/txt_foodhome_item_shicai"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_14sp"/>

            <com.example.aidong.view.MultiGridView
                android:id="@+id/gridview_item_foodhome_content_shicai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pref_2dp"
                android:gravity="center"
                android:horizontalSpacing="@dimen/pref_2dp"
                android:listSelector="@color/transparent"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/pref_2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pref_5dp"
                android:text="@string/txt_foodhome_item_renqun"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_14sp"/>

            <com.example.aidong.view.MultiGridView
                android:id="@+id/gridview_item_foodhome_content_renqun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pref_2dp"
                android:gravity="center"
                android:horizontalSpacing="@dimen/pref_2dp"
                android:listSelector="@color/transparent"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/pref_2dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>