<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="97dp"
    android:layout_height="wrap_content"
    android:paddingLeft="7.5dp"
    android:paddingRight="7.5dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_good_cover"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default"/>
    <TextView
        android:id="@+id/tv_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名商品名商品名商品名商品名商品名商品名"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_below="@+id/iv_good_cover"
        android:layout_alignLeft="@+id/iv_good_cover"
        android:layout_alignRight="@+id/iv_good_cover"
        android:layout_marginTop="11dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_good_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥ 100"
        android:textSize="11sp"
        android:gravity="center_horizontal"
        android:textColor="@color/text_veiw_red"
        android:layout_alignLeft="@+id/iv_good_cover"
        android:layout_alignRight="@+id/iv_good_cover"
        android:layout_below="@+id/tv_good_name"
        android:layout_marginTop="7dp"/>
</RelativeLayout>