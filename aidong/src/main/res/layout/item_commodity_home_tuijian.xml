<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/img_commodity_home_tuijian_tu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pref_200dp"
        android:scaleType="centerCrop"
        android:src="@color/color_txt_gray2"/>

    <TextView
        android:id="@+id/txt_commodity_home_tuijian_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_commodity_home_tuijian_xianjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_14sp"/>

        <TextView
            android:id="@+id/txt_commodity_home_tuijian_yuanjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_14sp"/>

        <TextView
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_commodity_home_tuijian_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_like_dynamic_copy"/>
    </LinearLayout>

</LinearLayout>