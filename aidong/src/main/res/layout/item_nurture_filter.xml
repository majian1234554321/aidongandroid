<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/left_margin"
    android:paddingRight="@dimen/right_margin"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/dv_nurture_cover"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_nurture_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈啊哈哈哈哈"
        android:textSize="16sp"
        android:maxLines="2"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/dv_nurture_cover"/>

    <TextView
        android:id="@+id/tv_nurture_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/shape_solid_black"
        android:textSize="14sp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="GNC"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/tv_nurture_price"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/dv_nurture_cover"/>

    <TextView
        android:id="@+id/tv_nurture_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_red"
        android:textSize="17sp"
        android:text="111"
        android:layout_toRightOf="@+id/dv_nurture_cover"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/dv_nurture_cover" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>