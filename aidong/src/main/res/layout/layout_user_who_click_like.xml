<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_white"
              android:orientation="vertical">

    <include
        layout="@layout/layout_title_top"
        />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:divider="#eaebf0"
        android:dividerHeight="@dimen/pref_0.5dp"
        android:listSelector="@color/color_white"
        android:scrollbars="none"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrDrawable="@drawable/default_ptr_flip"
        ptr:ptrHeaderBackground="@color/color_light_white"
        ptr:ptrHeaderTextColor="@color/e_five"


        ></com.handmark.pulltorefresh.library.PullToRefreshListView>


</LinearLayout>
