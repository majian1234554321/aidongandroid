<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/height_top_bar"
                    app:layout_collapseMode="parallax">

                    <cn.bingoogolapple.bgabanner.BGABanner
                        android:id="@+id/banner_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/place_holder_logo"
                        app:banner_pageChangeDuration="1000"
                        app:banner_pointAutoPlayAble="false"
                        app:banner_pointContainerBackground="@android:color/transparent"
                        app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
                        app:banner_pointTopBottomMargin="5dp"
                        app:banner_transitionEffect="alpha" />


                    <TextView
                        android:id="@+id/tv_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/shape_solid_black"
                        android:gravity="center_vertical"
                        android:text="11"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_top_bar"
                    app:layout_collapseMode="pin"/>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_coach_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/icon_coach"
                    android:gravity="center_horizontal"
                    android:text="丁晓喑"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/icon_follow" />


                <!--时间-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_time"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="时间"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|right"
                        android:text="星期五"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <include layout="@layout/inc_line_with_margin" />

                <!--地点-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_address"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="地点"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/icon_right_arrow"
                        android:gravity="center_vertical|right"
                        android:text="北京东路"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <include layout="@layout/inc_line_with_margin" />

                <!--场馆-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_venues"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="场馆"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_venues"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|right"
                        android:text="爱动体育"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <include layout="@layout/inc_line_with_margin" />

                <!--教室-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_room"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="教室"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_room"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical|right"
                        android:text="团体教室"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <include layout="@layout/inc_bold_line" />


                <!--已参加-->
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="?selectableItemBackground"
                    android:drawableRight="@drawable/icon_right_arrow"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/left_margin"
                    android:paddingRight="@dimen/right_margin"
                    android:text="@string/applicant_count"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <include layout="@layout/inc_line_with_margin" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_applicant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/line_color" />

                <!--课程简介-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/icon_black_point"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/icon_black_point"
                    android:gravity="center_vertical"
                    android:text="课程简介"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:layout_marginRight="@dimen/right_margin"
                    android:text="介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍
                    介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_anchor="@id/app_bar_layout"
            app:layout_anchorGravity="bottom|center_horizontal"
            android:src="@drawable/place_holder_user">
        </android.support.design.widget.FloatingActionButton>


    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/black">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/styleImageBack" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="课程详情"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackground"
            android:padding="5dp"
            android:src="@drawable/icon_share" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_apply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_solid_black"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rmb_price"
            android:textColor="@color/main_red"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="马上报名"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>