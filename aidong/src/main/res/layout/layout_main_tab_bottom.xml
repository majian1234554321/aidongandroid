<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="55dp"
    android:background="@color/color_home_tab_bg"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/tabNearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/tabNearImageView"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:src="@drawable/selctor_tab_home" />

            <TextView
                style="@style/tabTextStyle"
                android:layout_below="@id/tabNearImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/tabhome"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_new_circle_message"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/shape_circle_red"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tabFoundLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/tabFoundImageView"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:src="@drawable/selector_tab_live_video" />

            <TextView
                style="@style/tabTextStyle"
                android:layout_below="@id/tabFoundImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/course"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tabStoreLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/tabStoreImageView"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:src="@drawable/selector_tab_store" />

            <TextView
                style="@style/tabTextStyle"
                android:layout_below="@id/tabStoreImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/store"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tabMineLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/tabMineImageView"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:src="@drawable/selector_tab_mine" />


            <TextView
                style="@style/tabTextStyle"
                android:layout_below="@id/tabMineImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/tabMine"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_new_message"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/shape_circle_red"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>

</LinearLayout>