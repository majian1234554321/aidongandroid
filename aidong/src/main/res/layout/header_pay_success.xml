<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="91dp"
        android:layout_height="86dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/icon_pay_success"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="感谢您的支持，我们会竭尽为您服务"
        android:textColor="@color/c9"
        android:textSize="15sp"
        android:layout_marginTop="22dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/right_margin"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="返回首页"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:background="@drawable/shape_solid_corner_white"
            android:textColor="@color/c3"/>

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="查看订单"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_stroke_red"
            android:textColor="@color/main_red"/>
    </LinearLayout>

    <include layout="@layout/inc_bold_line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/tvRecommend"
        android:text="推荐商品"
        android:drawablePadding="5dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/icon_black_point"
        android:drawableRight="@drawable/icon_black_point"/>
</LinearLayout>