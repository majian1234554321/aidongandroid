<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_background"
              android:orientation="vertical">

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:fadingEdge="none"
        android:listSelector="@color/color_white"
        android:scrollbars="none"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrDrawable="@drawable/default_ptr_flip"
        ptr:ptrHeaderBackground="@color/color_white"
        ptr:ptrHeaderTextColor="@color/e_five">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_hight"
                android:background="@color/main_tophead"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_home_seach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/place_holder_logo"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/pref_5dp"
                    android:layout_marginRight="@dimen/pref_5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/txt_home_title"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/font_20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_home_area"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/font_14sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_home_saoma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/place_holder_logo"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pref_200dip">

                <com.example.aidong.widget.customview.CustomViewPager
                    android:id="@+id/viewpager_home_ad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/layout_home_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/pref_10dp"
                    android:orientation="horizontal"/>
            </RelativeLayout>

            <com.example.aidong.widget.customview.MultiGridView
                android:id="@+id/gridview_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pref_2dp"
                android:gravity="center"
                android:horizontalSpacing="@dimen/pref_2dp"
                android:listSelector="@color/transparent"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/pref_2dp"/>

            <com.example.aidong.widget.customview.MyListView
                android:id="@+id/list_home_tuijian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/transparent"
                android:dividerHeight="@dimen/pref_0dp"
                android:scrollbars="none"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pref_100dp"/>

        </LinearLayout>

    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>