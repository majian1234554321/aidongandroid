<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_commodity_home_time"
        android:layout_width="@dimen/pref_100dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_commodity_home_time_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/color_txt_gray2"/>

        <TextView
            android:id="@+id/txt_commodity_home_time_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/txt_home_title"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_16sp"/>
    </RelativeLayout>

</LinearLayout>