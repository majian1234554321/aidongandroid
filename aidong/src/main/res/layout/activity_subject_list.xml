<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/color_txt_gray2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_subject_list_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"/>

        <RelativeLayout
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pref_2dp"
            android:layout_weight="1"
            android:background="@color/line_gray">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/pref_5dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_subject_list_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_txt_gray1"
                    android:textSize="@dimen/font_16sp"/>

                <ImageView
                    android:id="@+id/img_subject_list_type_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/pref_10dp"
                    android:padding="@dimen/pref_5dp"
                    android:src="@drawable/btn_video_close_black"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/pref_20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_subject_list_filter_1"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/pref_10dp">

            <TextView
                android:id="@+id/txt_subject_list_filter_name_1"
                android:layout_width="@dimen/pref_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_16sp"/>

            <ImageView
                android:id="@+id/img_subject_list_filter_tip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_down"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_subject_list_filter_2"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/pref_10dp">

            <TextView
                android:id="@+id/txt_subject_list_filter_name_2"
                android:layout_width="@dimen/pref_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_16sp"/>

            <ImageView
                android:id="@+id/img_subject_list_filter_tip_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_down"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_subject_list_filter_3"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/pref_10dp">

            <TextView
                android:id="@+id/txt_subject_list_filter_name_3"
                android:layout_width="@dimen/pref_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_16sp"/>

            <ImageView
                android:id="@+id/img_subject_list_filter_tip_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_down"/>
        </LinearLayout>
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:fadingEdge="none"
        android:listSelector="@color/color_white"
        android:scrollbars="none"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrDrawable="@drawable/default_ptr_flip"
        ptr:ptrHeaderBackground="@color/color_white"
        ptr:ptrHeaderTextColor="@color/e_five">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.aidong.widget.customview.MyListView
                android:id="@+id/list_subject_list_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/transparent"
                android:dividerHeight="@dimen/pref_0dp"
                android:scrollbars="none"/>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>