<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.leyuan.aidong.widget.SimpleTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        app:stb_title="预约信息" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--预约人信息-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginLeft="@dimen/left_margin"
                android:gravity="center_vertical"
                android:text="预约人信息"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <include layout="@layout/inc_line_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/left_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="姓名:"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/tv_input_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入真实姓名"
                    android:paddingRight="@dimen/right_margin"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/c9"
                    android:textSize="15sp" />

            </LinearLayout>

            <include layout="@layout/inc_line_with_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/left_margin"
                android:paddingRight="@dimen/right_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="手机号:"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_input_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/icon_right_arrow"
                    android:gravity="right|center_vertical"
                    android:hint="请先绑定手机"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/c9"
                    android:textSize="15sp" />
            </LinearLayout>

            <include layout="@layout/inc_bold_line" />

            <!--课程信息-->
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginLeft="@dimen/left_margin"
                android:gravity="center_vertical"
                android:text="课程信息"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <include layout="@layout/inc_line_black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin">

                <ImageView
                    android:id="@+id/dv_cover"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/dv_cover"
                    android:singleLine="true"
                    android:text="课程名"
                    android:textColor="@color/c3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/dv_cover"
                    android:text="地址"
                    android:singleLine="true"
                    android:textColor="@color/c3"
                    android:textSize="15sp" />
            </RelativeLayout>

            <include layout="@layout/inc_line_with_margin" />

            <com.leyuan.aidong.widget.ExtendTextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                app:left_text="课程时间:"
                app:line_color="@color/transparent" />

            <include layout="@layout/inc_line_with_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?selectableItemBackground"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/left_margin"
                android:paddingRight="@dimen/right_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="上课地址:"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_venues_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:gravity="right|center_vertical"
                        android:text="组织方"
                        android:textColor="@color/c3"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:drawablePadding="5dp"
                        android:gravity="right|center_vertical"
                        android:text="快长宁区"
                        android:singleLine="true"
                        android:textColor="@color/c3"
                        android:textSize="15sp"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/inc_bold_line" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/left_margin"
                android:paddingRight="@dimen/right_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="优惠劵"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_coupon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/right_icon"
                    android:gravity="right|center_vertical"
                    android:text="请选择"
                    android:textColor="@color/c9"
                    android:textSize="15sp" />

            </LinearLayout>

            <include layout="@layout/inc_line_with_margin" />

            <LinearLayout
                android:id="@+id/ll_gold"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/left_margin"
                android:paddingRight="@dimen/right_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="金币"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="共1000爱币,满100爱币可用"
                    android:textColor="@color/c9"
                    android:textSize="15sp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@null" />
            </LinearLayout>

            <include layout="@layout/inc_bold_line" />


            <!--会员身份信息-->
            <include layout="@layout/inc_mine_identity" />

            <!--订单信息-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginLeft="@dimen/left_margin"
                android:gravity="center_vertical"
                android:text="订单信息"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <include layout="@layout/inc_line_black" />

            <com.leyuan.aidong.widget.ExtendTextView
                android:id="@+id/tv_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:left_text="课程总额:"
                app:line_color="@color/transparent" />

            <com.leyuan.aidong.widget.ExtendTextView
                android:id="@+id/tv_coupon_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:left_text="优惠劵:"
                app:line_color="@color/transparent" />

            <com.leyuan.aidong.widget.ExtendTextView
                android:id="@+id/tv_discount_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:left_text="课程优惠:"
                app:line_color="@color/transparent" />

            <com.leyuan.aidong.widget.ExtendTextView
                android:id="@+id/tv_aibi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:left_text="爱币:"
                app:line_color="@color/transparent" />

            <com.leyuan.aidong.widget.ExtendTextView
                android:id="@+id/tv_aidou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:left_text="爱豆:"
                app:line_color="@color/transparent" />

            <!--支付方式-->

            <include layout="@layout/inc_pay_info" />

            <include layout="@layout/inc_bold_line" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实付款:"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="¥300"
                android:textColor="@color/main_red"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/main_red"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>