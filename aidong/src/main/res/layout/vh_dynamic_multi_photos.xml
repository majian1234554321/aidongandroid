<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_root">

    <include layout="@layout/inc_dynamic_header"/>


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.leyuan.aidong.widget.ninephotoview.PhotoLayout
            android:id="@+id/circle_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/right_margin" />
    </RelativeLayout>

    <include layout="@layout/inc_dynamic_bottom"/>
</LinearLayout>