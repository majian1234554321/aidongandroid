<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_background"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/color_txt_gray2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_foodhome_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"/>

        <RelativeLayout
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pref_2dp"
            android:layout_weight="1"
            android:background="@color/line_gray">

            <LinearLayout
                android:id="@+id/layout_home_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/pref_5dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_foodhome_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_txt_gray1"
                    android:textSize="@dimen/font_16sp"/>

                <ImageView
                    android:id="@+id/img_foodhome_type_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/pref_10dp"
                    android:padding="@dimen/pref_5dp"
                    android:src="@drawable/btn_video_close_black"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/pref_20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pref_130dp">

        <com.example.aidong.view.CustomViewPager
            android:id="@+id/viewpager_foodhome_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/layout_foodhome_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/pref_10dp"
            android:orientation="horizontal"/>
    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pref_10dp"
        android:background="@color/transparent"
        android:fadingEdge="none"
        android:listSelector="@color/color_white"
        android:scrollbars="none"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrDrawable="@drawable/default_ptr_flip"
        ptr:ptrHeaderBackground="@color/color_white"
        ptr:ptrHeaderTextColor="@color/e_five">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_foodhome_tuijian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pref_10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pref_10dp"
                    android:text="@string/txt_subject_detail_yibao"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/font_16sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pref_0.5dp"
                    android:layout_marginLeft="@dimen/pref_20dp"
                    android:src="@color/line_color"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_foodhome_tuijian"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pref_160dp"
                    android:background="@color/white"
                    android:padding="@dimen/pref_10dp"
                    android:scrollbars="none"/>
            </LinearLayout>


            <com.example.aidong.view.MyListView
                android:id="@+id/list_foodhome_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/transparent"
                android:dividerHeight="@dimen/pref_10dp"
                android:scrollbars="none"/>

        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>