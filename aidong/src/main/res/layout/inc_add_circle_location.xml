<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_add_circle"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/shape_simi_circle_gray_solid"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_add_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/circle_select_no" />

        <TextView
            android:id="@+id/txt_add_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="@string/add_to_circle"
            android:textColor="@color/c3"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/bt_circle_delete"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/icon_close"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_add_location"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/shape_simi_circle_gray_solid"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_add_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/icon_course_location" />

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="@string/add_location"
            android:textColor="@color/c3"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/bt_location_delete"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/icon_close"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>
