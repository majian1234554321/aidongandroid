<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:background="@color/color_white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <com.leyuan.aidong.widget.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/pref_45dp"
            android:layout_height="@dimen/pref_45dp"
            android:layout_marginLeft="@dimen/pref_15dp"
            android:src="@drawable/icon_picture" >
        </com.leyuan.aidong.widget.CircleImageView>

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageView"
            android:layout_marginBottom="@dimen/pref_10dp"
            android:layout_marginLeft="@dimen/pref_5dp"
            android:layout_marginRight="@dimen/pref_10dp"
            android:layout_toRightOf="@id/imageView"
            android:background="@drawable/drawable_comment_frame" >

            <TextView
                android:id="@+id/txtUsername"
                style="@style/listUsernameTextStyle"
                android:layout_marginLeft="@dimen/pref_15dp"
                android:layout_marginTop="@dimen/pref_5dp"
                android:text=""
                android:textColor="@color/color_txt_gray1" >
            </TextView>

            <TextView
                android:id="@+id/txtHobby"
                style="@style/listHobbyTextStyle"
                android:layout_alignLeft="@id/txtUsername"
                android:layout_below="@id/txtUsername"
                android:layout_marginBottom="@dimen/pref_10dp"
                android:layout_marginRight="@dimen/pref_15dp"
                android:layout_marginTop="@dimen/pref_10dp"
                android:paddingBottom="@dimen/pref_5dp"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/pref_13dp" >
            </TextView>

            <TextView
                android:id="@+id/txtTime"
                style="@style/listDistanceTextStyle"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/txtHobby"
                android:layout_marginTop="@dimen/pref_5dp"
                android:text="5分钟以前"
                android:textColor="@color/color_txt_gray1"
                android:textSize="@dimen/pref_13dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/rel"
            android:background="@color/e_five"

            />
    </RelativeLayout>

</RelativeLayout>