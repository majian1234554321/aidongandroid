<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/main_tophead">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/txt_commodity_yingyangpin"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20sp"/>
    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:fadingEdge="none"
        android:listSelector="@color/color_white"
        android:scrollbars="none"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrDrawable="@drawable/default_ptr_flip"
        ptr:ptrHeaderBackground="@color/color_white"
        ptr:ptrHeaderTextColor="@color/e_five">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_commodity_home_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pref_100dp"
                android:background="@color/white"
                android:padding="@dimen/pref_5dp"
                android:scrollbars="none"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pref_45dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/pref_10dp"
                android:paddingRight="@dimen/pref_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/txt_commodity_tuijian_tip"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/font_16sp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txt_commodity_home_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/pref_5dp"
                    android:drawableRight="@drawable/jiantou_two"
                    android:gravity="center"
                    android:text="@string/txt_commodity_tuijian_more"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/font_16sp"/>
            </LinearLayout>

            <com.example.aidong.view.MultiGridView
                android:id="@+id/gridview_commodity_home_tuijian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pref_2dp"
                android:background="@color/white"
                android:gravity="center"
                android:horizontalSpacing="@dimen/pref_2dp"
                android:listSelector="@color/transparent"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/pref_2dp"/>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>