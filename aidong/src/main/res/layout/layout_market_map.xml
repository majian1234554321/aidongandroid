<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/bg_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          >



            <TextView
                android:layout_marginLeft="25dp"
                android:id="@+id/txt_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"


                android:singleLine="true"
                android:text="111112222222222222222222222222221"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_store_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_store_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"

                android:text="上单122222222222222222222222222222222222222222222222"
               android:textColor="@color/c3"
                android:textSize="10dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-12dp"
            android:src="@drawable/tag_address" />
    </LinearLayout>
</FrameLayout>