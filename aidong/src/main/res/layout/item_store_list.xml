<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/dv_venues_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="15dp" />


    <TextView

        android:id="@+id/tv_venues_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dv_venues_cover"
        android:layout_toRightOf="@+id/dv_venues_cover"
        android:singleLine="true"
        android:text="长风店"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_venues_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dv_venues_cover"
        android:layout_gravity="bottom"
        android:layout_toRightOf="@+id/dv_venues_cover"
        android:singleLine="true"
        android:textColor="@color/b3"
        android:textSize="13sp"
        tools:text="12122121" />


    <TextView
        android:id="@+id/tv_venues_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"

        android:layout_toRightOf="@+id/dv_venues_cover"
        android:drawableLeft="@drawable/icon_address2"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:text="dslfjasdlkfjsadlkfjdjkslafjkkjl"
        android:textColor="@color/b3"
        android:textSize="14sp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/dv_venues_cover"
        android:layout_marginLeft="15dp"
        android:src="@color/divider_list"

        />

</RelativeLayout>

