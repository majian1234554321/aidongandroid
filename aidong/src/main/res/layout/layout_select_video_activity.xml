<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pref_50dp"
        >

        <TextView
            android:id="@+id/txt_all_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/all_picture"
            android:textColor="@color/black"
            android:textSize="@dimen/pref_17dp"/>

        <ImageView
            android:id="@+id/img_down"
            android:layout_width="@dimen/pref_25dp"
            android:layout_height="@dimen/pref_25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/txt_all_picture"
            android:src="@drawable/icon_arrow_down"/>

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/pref_30dp"
            android:layout_height="@dimen/pref_30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/pref_9dp"
            android:src="@drawable/btn_video_close_black"/>


        <TextView
            android:id="@+id/text_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/pref_9dp"
            android:text="@string/next"
            android:textColor="#ff572f"
            android:textSize="@dimen/pref_17dp"/>
    </RelativeLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:horizontalSpacing="6dp"
        android:numColumns="3"
        android:verticalSpacing="6dp"
        ></GridView>


</RelativeLayout>
