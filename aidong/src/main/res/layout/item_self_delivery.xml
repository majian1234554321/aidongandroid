<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/left_margin"
    android:paddingRight="@dimen/right_margin"
    android:background="?selectableItemBackground">

    <RadioButton
        android:id="@+id/rb_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="威尔士长宁店"
        android:textColor="@color/c3"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/rb_check"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上海市长宁区番禹路8禹路88号上海市长宁区番禹路8禹路88号"
        android:textColor="@color/c9"
        android:textSize="15sp"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_shop_name"
        android:layout_alignLeft="@+id/tv_shop_name"
        />


    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/2.4km"
        android:layout_marginLeft="5dp"
        android:textColor="@color/c9"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_shop_name"
        android:layout_toRightOf="@+id/tv_address"/>

   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:layout_below="@+id/tv_address"
       android:background="@color/line_color"
       android:layout_marginTop="10dp"/>

</RelativeLayout>