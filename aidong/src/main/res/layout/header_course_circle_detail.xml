<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/tv_subjecttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        tools:text="@string/course_intro"
        android:textSize="12sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/share"
            android:text="299" />

        <TextView
            android:id="@+id/tv_fans"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_share"
            android:drawablePadding="8dp"
            tools:text="299" />

        <ImageView
            android:id="@+id/iv_fansssss"
            android:layout_toLeftOf="@+id/tv_fans"
            android:layout_marginRight="8dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/line_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/course_intro"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.leyuan.aidong.widget.richtext.RichWebView
        android:id="@+id/txt_course_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="7dp"
        android:textColor="@color/c3"
        android:textSize="12sp"
        tools:text="钢管舞属于动作与机器相结合多少点卡了咯松井大辅卡拉，啊迪斯科解放和点卡收费就" />


    <com.leyuan.aidong.widget.FlowLayoutgroup
        android:id="@+id/flowlayout"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="-10dp"
        android:paddingRight="-10dp"
        app:lineSpacing="10dp"
        app:maxLine="3"
       />




    <TextView
        android:id="@+id/txt_suggest_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/c3"
        android:textSize="14sp"
        tools:text="建议周频次: 2次/周" />

    <TextView
        android:id="@+id/txt_use_equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/c3"
        android:textSize="14sp"
        tools:text="使用机械: 纲领 踏板" />

    <TextView
        android:id="@+id/txt_target_population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/c3"
        android:textSize="14sp"
        tools:text="针对人群:喜欢纲领的所有运动员" />

    <TextView
        android:id="@+id/txt_suggest_match_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/c3"
        android:textSize="14sp"
        tools:text="建议课程搭配:MI Power Jump" />


    <RelativeLayout
        android:id="@+id/layout_attention"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="15dp"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_attention"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="100dp" />

        <TextView
            android:id="@+id/txt_bt_attention_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/icon_right_arrow"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="200人已关注" />

    </RelativeLayout>

    <!--<include-->
    <!--android:id="@+id/inc_relative_coach"-->
    <!--layout="@layout/view_person_horizontal"/>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="15dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_relate_course_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/txt_relate_course_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:text="@string/relate_course_video"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_check_all_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/icon_right_arrow"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/check_all"
                android:textColor="@color/b3"
                android:textSize="13sp" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_relate_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_relate_dynamic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/txt_relate_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:text="@string/relate_dynamic"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="invisible" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
