<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="fill_parent"
        android:layout_height="410dp"
        android:src="@color/transparent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background">

        <TextView
            android:id="@+id/tv_bwh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="请选择三围"
            android:textColor="@color/gray_normal"
            android:textSize="@dimen/length28" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/gray_normal"
            android:textSize="@dimen/length28" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/gray_normal"
            android:textSize="@dimen/length28" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_cancel"
            android:src="@color/list_line_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/line"
            android:orientation="horizontal">

            <com.leyuan.aidong.widget.PickerView
                android:id="@+id/pv_bust"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </com.leyuan.aidong.widget.PickerView>

            <com.leyuan.aidong.widget.PickerView
                android:id="@+id/pv_waist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </com.leyuan.aidong.widget.PickerView>

            <com.leyuan.aidong.widget.PickerView
                android:id="@+id/pv_hip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </com.leyuan.aidong.widget.PickerView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>