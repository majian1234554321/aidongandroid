<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="66dp">
        <TextView
            android:id="@+id/txt_income_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/length28"
            android:textColor="#333333"
            android:text="订单提成 （订单号123213232）"
            />
        <TextView
            android:id="@+id/txt_date"
            android:layout_below="@id/txt_income_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/length22"
            android:textColor="#999999"
            android:text="2015-02-21 16:00:00"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/txt_date"
            >
            <TextView
                android:id="@+id/txt_income_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/length28"
                android:textColor="#ff7674"
                android:text="+￥ 100.00"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d9d9d9"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>

</FrameLayout>