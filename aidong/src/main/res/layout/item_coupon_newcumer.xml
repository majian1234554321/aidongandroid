<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="185dp"
        android:layout_height="42.5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_white_rectangle_red_stroke">

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rmb_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="¥"
                android:textColor="@color/main_red"
                android:textSize="11sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="2"
                android:textColor="@color/main_red"
                android:textSize="34sp" />


            <TextView
                android:id="@+id/tv_discount_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="9dp"
                android:text="折"
                android:textColor="@color/main_red"
                android:textSize="30sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新人抵用用劵"
                android:textColor="@color/c3"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_produce_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="指定特殊产品可用"
                android:textColor="@color/c3"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_use_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="满300元可用"
                android:textColor="@color/c3"
                android:textSize="8sp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>