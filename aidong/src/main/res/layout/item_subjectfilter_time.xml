<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_subjectfilter"
              android:layout_width="@dimen/pref_60dp"
              android:layout_height="@dimen/pref_80dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/img_subjectfilter_tu"
        android:layout_width="@dimen/pref_60dp"
        android:layout_height="@dimen/pref_60dp"
        android:src="@color/black"/>

    <TextView
        android:id="@+id/txt_subjectfilter_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_16sp"/>

</LinearLayout>