<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#7c000000"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/btn_video_close_white"
            />
        <ImageView
            android:id="@+id/convert_camera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/convert_camera"
            />
        <TextView
            android:id="@+id/close_flashlight"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#00cbf7"
            android:textSize="16sp"
            android:text="关闭"
            android:layout_toLeftOf="@id/convert_camera"
            android:layout_marginRight="2dp"
            />
        <TextView
            android:id="@+id/auto_flashlight"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="自动"
            android:layout_toLeftOf="@id/close_flashlight"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/open_flashlight"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="打开"
            android:layout_toLeftOf="@id/auto_flashlight"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/open_flashlight"
            android:layout_marginRight="2dp"
            android:src="@drawable/flash_light_open"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:orientation="vertical"
        android:background="#7c000000"

        >
        <ProgressBar
            style="@style/MyProgressBar"
            android:id="@+id/pb_recorder_time"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:max="30000"
            android:progress="0"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            >
            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="7sp"
                android:layout_marginTop="3sp"
                android:textSize="13sp"
                android:textColor="@color/white"

                />
            <TextView
                android:id="@+id/text_recorder_alltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7sp"
                android:layout_marginTop="3sp"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:text="0:30"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/start_recorder"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/button_start_recorder_video"
                android:visibility="visible"
                />
            <ImageView
                android:id="@+id/stop_recorder"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/button_stop_recorder_video"
                android:visibility="invisible"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/text_start_recorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingTop="0dp"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:text="点击开始拍摄"

            />
    </LinearLayout>


</RelativeLayout>
