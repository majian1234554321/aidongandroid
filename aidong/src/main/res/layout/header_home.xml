<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:banner_pageChangeDuration="500"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
        app:banner_pointTopBottomMargin="5dp"
        app:banner_transitionEffect="fade"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_course"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_course"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_course"/>
        <TextView
            android:id="@+id/tv_nurture"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_nurture"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_nurture"/>
        <TextView
            android:id="@+id/tv_food"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_food"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_food"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_activity"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_activity"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_activity"/>
        <TextView
            android:id="@+id/tv_equipment"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_equipment"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_equipment"/>
        <TextView
            android:id="@+id/tv_competition"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_competition"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:visibility="invisible"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_competition"/>
    </LinearLayout>

    <include layout="@layout/inc_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="@dimen/left_margin"
        android:paddingRight="@dimen/right_margin"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_sport"
            android:layout_gravity="center_vertical"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/line_color"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_venues_cover"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/place_holder_logo"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_venues_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱动健身(长丰店)"
                android:textColor="@color/c3"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/iv_venues_cover"
                android:layout_alignTop="@+id/iv_venues_cover"
                android:layout_marginLeft="15dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_venues_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.8km"
                android:textColor="@color/c9"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/iv_venues_cover"
                android:layout_alignBottom="@+id/iv_venues_cover"
                android:layout_marginLeft="15dp"
                android:singleLine="true" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_right_arrow"/>
    </LinearLayout>
</LinearLayout>
