<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:banner_pageChangeDuration="500"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
        app:banner_pointTopBottomMargin="5dp"
        app:banner_transitionEffect="fade"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_below="@+id/banner">
        <TextView
            android:id="@+id/tv_course"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_course"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_course"/>
        <TextView
            android:id="@+id/tv_nurture"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_nurture"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_nurture"/>
        <TextView
            android:id="@+id/tv_food"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_food"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_food"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_below="@+id/layout">
        <TextView
            android:id="@+id/tv_activity"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_activity"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_activity"/>
        <TextView
            android:id="@+id/tv_equipment"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_equipment"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_equipment"/>
        <TextView
            android:id="@+id/tv_competition"
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/home_competition"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:visibility="invisible"
            android:background="?selectableItemBackground"
            android:drawableTop="@drawable/home_competition"/>
    </LinearLayout>

</RelativeLayout>
