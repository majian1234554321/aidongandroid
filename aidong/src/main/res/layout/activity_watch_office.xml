    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_back"

            style="@style/styleImageBack"/>

        <LinearLayout
            android:id="@+id/linear_special_topic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_special_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="课程"
                android:textColor="@android:color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tag_special_topic"
                android:layout_width="48dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="#ff5000" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_thorough"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_thorough"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="活动"
                android:textColor="@color/text_gray"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tag_thorough"
                android:layout_width="48dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_celebrity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_celebrity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="专访"
                android:textColor="@color/text_gray"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tag_celebrity"
                android:layout_width="48dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/black" />
        </LinearLayout>

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>