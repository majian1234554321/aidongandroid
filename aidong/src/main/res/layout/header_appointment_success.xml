<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="注：爱动不会要求您点击任何链接进行退款，谨防受骗"
        android:textColor="@color/white"
        android:background="@color/black"
        android:padding="5dp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="91dp"
        android:layout_height="86dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/icon_appointment_success"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请提早15分钟入场,"
        android:textColor="@color/c9"
        android:textSize="15sp"
        android:layout_marginTop="22dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动时间："
            android:textColor="@color/c9"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c9"
            android:textSize="15sp"
            android:text="2015-09-09 14:30"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:paddingBottom="15dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="返回首页"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:background="@drawable/shape_solid_corner_white"
            android:textColor="@color/c3"/>

        <TextView
            android:id="@+id/tv_appointment"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="查看预约"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_stroke_red"
            android:textColor="@color/main_red"/>
    </LinearLayout>

    <include layout="@layout/inc_bold_line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="推荐商品"
        android:drawablePadding="5dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/icon_black_point"
        android:drawableRight="@drawable/icon_black_point"/>
</LinearLayout>