<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_theme">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white">


                <!-- -->
                <LinearLayout
                    android:id="@+id/layout_no_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_avatar_default" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login_or_register_immediately"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/find_your_club"
                            android:textColor="@color/b3"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            />

                    </LinearLayout>


                </LinearLayout>

                <!--login state -->
                <RelativeLayout
                    android:id="@+id/relativeLayout_my_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imageView_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp" />

                    <ImageView
                        android:id="@+id/imageView_xinbie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/imageView_head"
                        android:layout_margin="5dp"
                        android:src="@drawable/icon_girl"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="90dp"
                        android:layout_marginRight="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Andrew Nj"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/linearLayout_guanzhu"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="关注"
                                    android:textColor="@color/c3"
                                    android:textSize="@dimen/length22" />

                                <TextView

                                    android:id="@+id/textView_guanzhushu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/c3"
                                    android:textSize="@dimen/length22" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="1dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_height="@dimen/pref_15dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/list_line_color" />

                            <LinearLayout
                                android:id="@+id/linearLayout_beiguanzhu"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"

                                android:gravity="left"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="粉丝"
                                    android:textColor="@color/c3"
                                    android:textSize="@dimen/length22" />

                                <TextView
                                    android:id="@+id/textView_beiguanzhushu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/c3"
                                    android:textSize="@dimen/length22" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="@dimen/pref_15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/list_line_color" />

                            <LinearLayout
                                android:id="@+id/layout_hot"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"

                                android:gravity="left">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="动态"
                                    android:textColor="@color/c3"
                                    android:textSize="@dimen/length22" />

                                <TextView
                                    android:id="@+id/textView_popularity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="0"
                                    android:textColor="@color/c3"
                                    android:textSize="@dimen/length22" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

            </FrameLayout>


            <include layout="@layout/inc_month_clock_info" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mine_divider" />

            <com.leyuan.aidong.widget.AidongMineItem
                android:id="@+id/item_my_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:divider_visible="true"
                app:img_tag="@drawable/mine_love_coin"
                app:txt_name="我的爱币" />


            <com.leyuan.aidong.widget.AidongMineItem
                android:id="@+id/item_my_member_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:divider_visible="true"
                app:img_tag="@drawable/mine_love_coin"
                app:txt_name="我的会员卡" />


            <com.leyuan.aidong.widget.AidongMineItem
                android:id="@+id/item_my_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:divider_visible="true"
                app:img_tag="@drawable/mine_order"
                app:txt_name="我的订单" />

            <com.leyuan.aidong.widget.AidongMineItem
                android:id="@+id/item_my_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:divider_visible="true"
                app:img_tag="@drawable/mine_coupon"
                app:txt_name="我的优惠券" />

            <com.leyuan.aidong.widget.AidongMineItem
                android:id="@+id/item_sport_timing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:divider_visible="true"
                android:visibility="gone"
                app:img_tag="@drawable/mine_private"
                app:txt_name="私人定制" />

            <com.leyuan.aidong.widget.AidongMineItem
                android:id="@+id/item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:divider_visible="true"
                app:img_tag="@drawable/mine_shopping_address"
                android:layout_marginTop="@dimen/pref_10dp"
                app:txt_name="收货地址" />

            <com.leyuan.aidong.widget.AidongMineItem
                android:id="@+id/item_recommend_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

                app:divider_visible="true"
                app:img_tag="@drawable/mine_add_friend"
                app:txt_name="推荐好友" />

            <com.leyuan.aidong.widget.AidongMineItem
                android:id="@+id/item_after_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:divider_visible="true"
                app:img_tag="@drawable/mine_after_sale"
                app:txt_name="售后/退款" />

            <com.leyuan.aidong.widget.AidongMineItem
                android:id="@+id/item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:img_tag="@drawable/mine_setting"
                app:txt_name="设置" />
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pref_50dp"
        android:background="@color/black">

        <ImageButton
            android:id="@+id/btn_shop_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            android:src="@drawable/mine_shopping_basket" />

        <ImageView
            android:id="@+id/img_new_shop"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shape_circle_red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_new_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/mine_prompt"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_new_message"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/shape_circle_red"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_message"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:scaleType="centerInside"
            android:background="@color/transparent"
            android:src="@drawable/mine_message" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxWidth="200dp"
            android:text="@string/tabMine"
            android:textColor="#fff"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>