<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.aidong.widget.SimpleTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        app:stb_title="订单详情" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:text="state"
                    android:textColor="@color/main_red"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/ll_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"

                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付时间:"
                        android:textColor="@color/main_red"
                        android:textSize="14sp" />

                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        app:isHideTimeBackground="true"
                        app:isShowDay="false"
                        app:isShowHour="true"
                        app:isShowMillisecond="false"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:isTimeTextBold="false"
                        app:suffixTextColor="@color/main_red"
                        app:timeTextColor="@color/main_red"
                        app:timeTextSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="订单号:2252"
                    android:textColor="@color/c9"
                    android:textSize="13sp" />

                <include layout="@layout/inc_line_black" />

                <!-- 快递订单信息-->
                <LinearLayout
                    android:id="@+id/ll_express_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/inc_order_express" />

                    <include layout="@layout/inc_receiver_info" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_express_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- 自提订单信息-->
                <LinearLayout
                    android:id="@+id/ll_self_delivery_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/inc_order_self_delivery_info" />

                </LinearLayout>

                <!--订单信息-->
                <include layout="@layout/inc_order_info" />

                <!--支付信息-->
                <LinearLayout
                    android:id="@+id/ll_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:gravity="center_vertical"
                        android:text="支付方式"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <include layout="@layout/inc_line_black" />

                    <com.example.aidong.widget.CustomNestRadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginRight="@dimen/right_margin"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/icon_ali_pay"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="支付宝"
                                android:textColor="@color/c3"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/cb_alipay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@color/line_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginRight="@dimen/right_margin"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/icon_weixin_pay"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="微信"
                                android:textColor="@color/c3"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/cb_weixin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </com.example.aidong.widget.CustomNestRadioGroup>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <!--底部操作按钮信息-->
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#f2f2f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="17dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1件商品"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_pay_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="实付款:"
                android:textColor="@color/c3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="¥300.00"
                android:textColor="@color/c3"
                android:textSize="17sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_cancel_order"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_solid_corner_white"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="取消订单"
                android:textColor="@color/c3"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_stroke_red"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="立即支付"
                android:textColor="@color/main_red"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_after_sell"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_solid_corner_white"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="退款/换货"
                android:textColor="@color/c3"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_stroke_red"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="确认收货"
                android:textColor="@color/main_red"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_solid_corner_white"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="删除订单"
                android:textColor="@color/c3"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_rebuy"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_stroke_red"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="再次购买"
                android:textColor="@color/main_red"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>