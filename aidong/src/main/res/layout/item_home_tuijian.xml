<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_home_item_tuijian"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/pref_145dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/img_home_item_tuijian_content"
        android:layout_width="@dimen/pref_100dp"
        android:layout_height="@dimen/pref_100dp"
        android:scaleType="centerCrop"
        android:src="@color/white"/>

    <TextView
        android:id="@+id/txt_home_item_tuijian_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:layout_margin="@dimen/pref_2dp"
        android:textSize="@dimen/font_14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pref_2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_home_item_tuijian_shiji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_12sp"/>

        <TextView
            android:layout_width="@dimen/pref_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_home_item_tuijian_yuanjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_txt_gray2"
            android:textSize="@dimen/font_12sp"/>
    </LinearLayout>

</LinearLayout>