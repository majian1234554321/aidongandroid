<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.leyuan.aidong.widget.SimpleTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        app:stb_title="预约详情" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--预约状态布局-->
                <include layout="@layout/inc_appointment_state_info" />

                <!--课程预约信息布局-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:gravity="center_vertical"
                        android:text="预约信息"
                        android:textColor="@color/c3"
                        android:textSize="16sp" />

                    <include layout="@layout/inc_line_black" />

                    <com.leyuan.aidong.widget.ExtendTextView
                        android:id="@+id/tv_course_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:left_text="预约人:"
                        app:line_color="@color/transparent" />

                    <com.leyuan.aidong.widget.ExtendTextView
                        android:id="@+id/tv_course_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:left_text="手机:"
                        app:line_color="@color/transparent" />

                    <com.leyuan.aidong.widget.ExtendTextView
                        android:id="@+id/tv_venues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:left_text="上课场馆:"
                        app:line_color="@color/transparent" />

                    <com.leyuan.aidong.widget.ExtendTextView
                        android:id="@+id/tv_course_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:left_text="上课教室:"
                        app:line_color="@color/transparent" />

                    <com.leyuan.aidong.widget.ExtendTextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:left_text="课程时间:"
                        app:line_color="@color/transparent" />

                    <com.leyuan.aidong.widget.ExtendTextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:left_text="上课地址:"
                        app:line_color="@color/transparent" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_line" />

                <!--订单信息-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="@dimen/left_margin"
                    android:gravity="center_vertical"
                    android:text="订单信息"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <include layout="@layout/inc_line_black" />

                <com.leyuan.aidong.widget.ExtendTextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_text="课程总额:"
                    app:line_color="@color/transparent" />

                <com.leyuan.aidong.widget.ExtendTextView
                    android:id="@+id/coupon_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_text="优惠劵:"
                    app:line_color="@color/transparent" />

                <com.leyuan.aidong.widget.ExtendTextView
                    android:id="@+id/course_privilege"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_text="课程优惠:"
                    app:line_color="@color/transparent" />

                <com.leyuan.aidong.widget.ExtendTextView
                    android:id="@+id/tv_aibi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_text="爱币:"
                    app:line_color="@color/transparent" />

                <com.leyuan.aidong.widget.ExtendTextView
                    android:id="@+id/tv_aidou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_text="爱豆:"
                    app:line_color="@color/transparent" />

                <com.leyuan.aidong.widget.ExtendTextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_text="下单时间:"
                    app:line_color="@color/transparent" />

                <com.leyuan.aidong.widget.ExtendTextView
                    android:id="@+id/tv_pay_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_text="支付时间:"
                    app:line_color="@color/transparent"
                    android:visibility="gone"/>

                <com.leyuan.aidong.widget.ExtendTextView
                    android:id="@+id/tv_pay_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_text="支付方式:"
                    app:line_color="@color/transparent"
                    android:visibility="gone"/>

                <!--支付信息-->
                <LinearLayout
                    android:id="@+id/ll_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:gravity="center_vertical"
                        android:text="支付方式"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <include layout="@layout/inc_line_black" />

                    <com.leyuan.aidong.widget.CustomNestRadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginRight="@dimen/right_margin"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/icon_ali_pay"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="支付宝"
                                android:textColor="@color/c3"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/cb_alipay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@color/line_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginRight="@dimen/right_margin"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/icon_weixin_pay"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="微信"
                                android:textColor="@color/c3"
                                android:textSize="14sp" />

                            <RadioButton
                                android:id="@+id/cb_weixin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@color/line_color" />
                    </com.leyuan.aidong.widget.CustomNestRadioGroup>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <!--底部操作按钮信息-->
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="17dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="实付款:"
                android:textColor="@color/c3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="¥300.00"
                android:textColor="@color/c3"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel_join"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_solid_corner_white"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="取消参加"
                android:textColor="@color/c3"
                android:textSize="14sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_cancel_pay"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_solid_corner_white"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="取消付款"
                android:textColor="@color/c3"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_stroke_red"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="确认参加"
                android:textColor="@color/main_red"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_solid_corner_white"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="删除"
                android:textColor="@color/c3"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_stroke_red"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="立即支付"
                android:textColor="@color/main_red"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>