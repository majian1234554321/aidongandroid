<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
    <com.leyuan.aidong.widget.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/img_girdview_select_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />
        <View
            android:id="@+id/view_stroke_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_select_video_bg"
            android:visibility="invisible"
            ></View>
        <ImageView
            android:id="@+id/img_mark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_small_video"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:id="@+id/txt_duration"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="2dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="1:39"
            />

        <ImageView
            android:id="@+id/img_circle"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            />
    </com.leyuan.aidong.widget.SquareRelativeLayout>

</RelativeLayout>
