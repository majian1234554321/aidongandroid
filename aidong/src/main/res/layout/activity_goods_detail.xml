<?xml version="1.0" encoding="utf-8"?><!--todo ui滑动bug-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.leyuan.aidong.widget.SlideDetailsLayout
            android:id="@+id/slide_details_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:default_panel="front"
            app:duration="300"
            app:percent="0.4">


            <!--商品详情默认布局UI-->
            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/app_bar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expandedTitleMarginEnd="64dp"
                        app:expandedTitleMarginStart="48dp"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="500dp"
                            android:background="@color/white"
                            android:visibility="gone"
                            app:layout_collapseMode="parallax">

                            <android.support.v4.view.ViewPager
                                android:id="@+id/view_pager"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </RelativeLayout>

                        <cn.bingoogolapple.bgabanner.BGABanner
                            android:id="@+id/banner_layout"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="@color/white"
                            android:visibility="gone"
                            app:banner_pageChangeDuration="1000"
                            app:banner_pointAutoPlayAble="false"
                            app:banner_pointContainerBackground="@android:color/transparent"
                            app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
                            app:banner_pointTopBottomMargin="5dp"
                            app:banner_transitionEffect="alpha"
                            app:layout_collapseMode="parallax" />

                        <android.support.v7.widget.Toolbar
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_top_bar"
                            app:layout_collapseMode="pin" />

                    </android.support.design.widget.CollapsingToolbarLayout>
                </android.support.design.widget.AppBarLayout>

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingTop="20dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <LinearLayout
                        android:id="@+id/ll_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="¥799.00"
                            android:textColor="@color/main_red"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/tv_market_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="¥1000"
                            android:textColor="@color/c3"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_goods_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="70dp"
                            android:layout_marginRight="70dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_horizontal"
                            android:text="PROCIRCLE  YOGA  BALL 瑜伽防爆滑健身球"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:id="@id/ll_coupon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/venues_divider" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:drawableLeft="@drawable/icon_black_point"
                                android:drawablePadding="5dp"
                                android:drawableRight="@drawable/icon_black_point"
                                android:gravity="center_vertical"
                                android:text="爱动福利券"
                                android:textSize="16sp"
                                android:visibility="visible" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_coupon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7.5dp"
                                android:layout_marginRight="7.5dp"
                                android:paddingBottom="15dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/line_color"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/ll_goods_sku"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="?selectableItemBackground"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/left_margin"
                            android:paddingRight="@dimen/right_margin">

                            <TextView
                                android:id="@+id/tv_select"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="选择:"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_select_specification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:drawablePadding="5dp"
                                android:drawableRight="@drawable/icon_right_arrow"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <include layout="@layout/inc_line" />

                        <LinearLayout
                            android:id="@+id/ll_code"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="?selectableItemBackground"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/left_margin"
                            android:paddingRight="@dimen/right_margin">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:text="推荐码:"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_recommend_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:drawablePadding="5dp"
                                android:gravity="right"
                                android:hint="若有推荐人请输入该人推荐码"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/c9"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <include layout="@layout/inc_line" />

                        <LinearLayout
                            android:id="@+id/ll_address"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/left_margin"
                            android:paddingRight="@dimen/right_margin">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="配送信息:"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_address_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="5dp"
                                    android:gravity="right|center_vertical"
                                    android:text="上海长宁店番禹区88号"
                                    android:textColor="@color/c3"
                                    android:textSize="15sp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/tv_delivery_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:drawablePadding="5dp"
                                    android:gravity="right|center_vertical"
                                    android:text="快递"
                                    android:textColor="@color/c9"
                                    android:textSize="15sp"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:src="@drawable/icon_right_arrow" />
                        </LinearLayout>

                        <include layout="@layout/inc_bold_line" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:drawableLeft="@drawable/icon_black_point"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/icon_black_point"
                            android:gravity="center_vertical"
                            android:text="爱动福利社"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/icon_self_delivery" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/icon_return" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/icon_genuine" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/icon_gabalnara" />
                        </LinearLayout>

                        <include layout="@layout/inc_bold_line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/iv_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/icon_arrow_up" />

                            <TextView
                                android:id="@+id/tv_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="上拉查看商品图文详情"
                                android:textColor="@color/c3"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v4.widget.NestedScrollView>
            </android.support.design.widget.CoordinatorLayout>

            <!--商品详情下拉布局UI-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <com.ogaclejapan.smarttablayout.SmartTabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_top_bar"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/height_top_bar"
                    app:stl_defaultTabTextColor="@color/gray_normal"
                    app:stl_defaultTabTextSize="17sp"
                    app:stl_dividerColor="@color/transparent"
                    app:stl_indicatorColor="@color/main_red"
                    app:stl_indicatorInterpolation="smart"
                    app:stl_indicatorThickness="3dp"
                    app:stl_indicatorWidth="auto"
                    app:stl_underlineColor="@color/transparent" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </com.leyuan.aidong.widget.SlideDetailsLayout>

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackground"
                android:padding="5dp"
                android:src="@drawable/icon_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="￥999"
                android:textColor="@color/main_red"
                android:textSize="20sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackground"
                android:padding="5dp"
                android:src="@drawable/icon_share" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="centerInside"
            android:src="@drawable/icon_cart" />

        <TextView
            android:id="@+id/tv_add_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/c3"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_red"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>