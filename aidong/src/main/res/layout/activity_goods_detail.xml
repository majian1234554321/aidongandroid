<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <com.example.aidong.view.SlideDetailsLayout
            android:id="@+id/slide_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:default_panel="front"
            app:duration="300"
            app:percent="0.4">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="345dp">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/vp_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <com.leyuan.support.widget.customview.ViewPagerIndicator
                            android:id="@+id/vp_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="¥799.00"
                        android:textColor="@color/main_red"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="¥1000"
                        android:textColor="@color/c3"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="70dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"
                        android:text="PROCIRCLE  YOGA  BALL 瑜伽防爆滑健身球"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/venues_divider" />

                    <LinearLayout
                        android:id="@+id/ll_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:drawableLeft="@drawable/point_black"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/point_black"
                            android:gravity="center_vertical"
                            android:text="爱动福利券"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_coupon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="7.5dp"
                            android:layout_marginRight="7.5dp"
                            android:layout_marginTop="20dp" />

                        <include layout="@layout/inc_bold_line" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:layout_marginRight="@dimen/right_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="已选择:"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/icon_right_arrow"
                            android:singleLine="true"
                            android:text="芒果,1个"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <include layout="@layout/inc_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:layout_marginRight="@dimen/right_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="推荐码:"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:hint="若有推荐人请输入该人推荐码"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/c9"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <include layout="@layout/inc_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:layout_marginRight="@dimen/right_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="配送信息:"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/icon_right_arrow"
                            android:singleLine="true"
                            android:text="请选择"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <include layout="@layout/inc_bold_line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:drawableLeft="@drawable/point_black"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/point_black"
                        android:gravity="center_vertical"
                        android:text="爱动福利社"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <include layout="@layout/inc_bold_line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:drawableLeft="@drawable/icon_arrow_up"
                        android:gravity="center"
                        android:text="上拉查看商品详情"
                        android:textColor="@color/c3"
                        android:textSize="15sp" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/slide_details_behind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_radio_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="商品详情"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_radio_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="常见问题"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_radio_bg"
                        android:button="@null"
                        android:gravity="center"
                        android:text="售后服务"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </RadioGroup>

                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </com.example.aidong.view.SlideDetailsLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black">

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_red"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>