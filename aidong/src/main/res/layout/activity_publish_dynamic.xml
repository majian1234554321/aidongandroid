<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人动态"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="top"
                    android:hint="分享你的健身感受"
                    android:inputType="textMultiLine"
                    android:minHeight="100dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="12.5dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_content_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="1000字"
                    android:textColor="@color/c9"
                    android:layout_marginRight="@dimen/right_margin"
                    android:layout_marginBottom="@dimen/right_margin"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="15dp" />


            <Button
                android:id="@+id/bt_publish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_top_bar"
                android:layout_marginLeft="@dimen/pref_10dp"
                android:layout_marginRight="@dimen/pref_10dp"
                android:layout_marginTop="@dimen/pref_50dp"
                android:background="@drawable/btn_shape_green"
                android:text="@string/release"
                android:textColor="@color/color_white"
                android:textSize="16sp" />
        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_rotate_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        >
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="#77000000"

            >
            <ImageView
                android:id="@+id/img_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/progress_1"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_progress"
                android:layout_centerHorizontal="true"
                android:textColor="#77000000"
                android:textSize="12sp"
                android:text="正在压缩视频"

                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
