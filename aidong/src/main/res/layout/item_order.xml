<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical"
  >

    <include layout="@layout/inc_bold_line" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="state"
        android:textColor="@color/main_red"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_paid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_id_or_time_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号: "
            android:textColor="@color/c9"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_id_or_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="201630"
            android:textColor="@color/c9"
            android:textSize="13sp" />
    </LinearLayout>

    <include layout="@layout/inc_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_good"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/inc_order_bottom_info"/>

</LinearLayout>