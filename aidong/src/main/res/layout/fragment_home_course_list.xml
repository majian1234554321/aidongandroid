<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.leyuan.aidong.ui.home.view.CourseListFilterNew
        android:id="@+id/view_filter_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        app:stl_defaultTabTextColor="@color/gray_normal"
        app:stl_defaultTabTextHorizontalPadding="36dp"
        app:stl_defaultTabTextSize="17sp"
        app:stl_dividerColor = "@color/transpance"
        app:stl_indicatorThickness="0dp"/>



        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />




</LinearLayout>
