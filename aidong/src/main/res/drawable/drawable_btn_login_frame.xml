<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 初始状态 -->
    <item android:state_pressed="false"><shape android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="@android:color/transparent" />
            <!-- 边框线条颜色 -->
            <stroke android:width="1dip" android:color="@color/color_white"></stroke>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="@dimen/pref_200dip" />
        </shape>
       
        </item>

    <!-- 按下状态 -->
    <item android:state_pressed="true"><shape android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="@color/color_line_gray" />
            <!-- 边框线条颜色 -->
            <stroke android:width="1dip" android:color="@color/color_white"></stroke>

            <corners android:radius="@dimen/pref_200dip" />
        </shape></item>

</selector>